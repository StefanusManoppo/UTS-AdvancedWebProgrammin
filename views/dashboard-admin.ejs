<%- include('partials/header', {title: title, user: user}) %>

<div class="row">
    <div class="col-12">
        <div class="jumbotron">
            <h1 class="display-4">🔐 Dashboard Admin</h1>
            <p class="lead">Selamat datang, <%= user.username %>! - Full Access Management</p>
            <hr class="my-4">
            <p>Kelola semua aspek sistem bengkel dengan hak akses penuh</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card text-white bg-primary h-100">
            <div class="card-body">
                <h5 class="card-title">📦 Data Stok Barang</h5>
                <p class="card-text">Kelola inventory dan stok barang bengkel</p>
                <a href="/stok/barang" class="btn btn-light">Kelola Stok</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <h5 class="card-title">💰 Laporan Keuangan</h5>
                <p class="card-text">Kelola pemasukan dan pengeluaran</p>
                <div class="mt-3">
                    <a href="/laporan/pemasukan" class="btn btn-light btn-sm me-2">Pemasukan</a>
                    <a href="/laporan/pengeluaran" class="btn btn-light btn-sm me-2">Pengeluaran</a>
                    <a href="/laporan/riwayat" class="btn btn-light btn-sm">Riwayat</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-white bg-warning h-100">
            <div class="card-body">
                <h5 class="card-title">✅ Approval Requests</h5>
                <p class="card-text">Review dan approve request dari montir</p>
                <a href="/approval/pending" class="btn btn-light">Lihat Requests</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Akses Cepat Admin</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 text-center mb-3">
                        <a href="/stok/barang" class="btn btn-outline-primary w-100">
                            <div style="font-size: 2rem;">📦</div>
                            <small>Stok Barang</small>
                        </a>
                    </div>
                    <div class="col-md-3 text-center mb-3">
                        <a href="/laporan/pemasukan" class="btn btn-outline-success w-100">
                            <div style="font-size: 2rem;">💰</div>
                            <small>Pemasukan</small>
                        </a>
                    </div>
                    <div class="col-md-3 text-center mb-3">
                        <a href="/laporan/pengeluaran" class="btn btn-outline-danger w-100">
                            <div style="font-size: 2rem;">📊</div>
                            <small>Pengeluaran</small>
                        </a>
                    </div>
                    <div class="col-md-3 text-center mb-3">
                        <a href="/approval/pending" class="btn btn-outline-warning w-100">
                            <div style="font-size: 2rem;">✅</div>
                            <small>Approvals</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>